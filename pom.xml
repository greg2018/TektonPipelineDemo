<profiles>
	<profile>
	  <id>coverage</id>
	  <build>
	   <plugins>
		<plugin>
						<groupId>org.springframework.boot</groupId>
						<artifactId>spring-boot-maven-plugin</artifactId>
					</plugin>
		<plugin>
		  <groupId>org.jacoco</groupId>
		 <artifactId>jacoco-maven-plugin</artifactId>
		  <version>0.8.7</version>
		  <executions>
			<execution>
			  <id>prepare-agent</id>
			  <goals>
				<goal>prepare-agent</goal>
			  </goals>
			</execution>
			<execution>
			  <id>report</id>
			  <goals>
				<goal>report</goal>
			  </goals>
			  <configuration>
				<formats>
				  <format>XML</format>
				</formats>
			  </configuration>
			</execution>
		  </executions>
		</plugin>
		
	   </plugins>
	  </build>
	</profile>
</profiles>

